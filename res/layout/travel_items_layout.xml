<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/travel_imageview"
        android:layout_width="120dp"
        android:layout_height="100dp"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"        
        android:padding="5dp"
        >
        
        <TextView 
            android:id="@+id/travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="团体门票"
            android:textSize="18sp"
            />
        <TextView 
            android:id="@+id/travel_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/travel_title"
            android:text="123m"
            android:textColor="#ADADAD"
            />
        <TextView 
            android:id="@+id/travel_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  
            android:paddingTop="5dp"
            android:layout_below="@id/travel_title"
            android:text="just test!just test!just test!just test!just test!just test!just test!just test!just test!"
            android:maxLines="2"
            android:textColor="#ADADAD"
            android:textSize="15sp"
            />
        <TextView 
            android:id="@+id/travel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_below="@id/travel_summary"
            android:textSize="20sp"
            android:text="75"
            android:textColor="#48D1CC"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:text="元"            
            android:layout_toRightOf="@id/travel_price"
            android:layout_alignBottom="@id/travel_price"
            />
        <TextView 
            android:id="@+id/travel_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_toRightOf="@id/travel_price"
            android:layout_alignBottom="@id/travel_price"
            android:layout_marginLeft="20dp"
            android:text="198元"
            android:textColor="#EE0000"
            />
        <TextView 
            android:id="@+id/travel_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/travel_price"
            android:text="4.2分"
            android:textColor="#ADADAD"
            />
    </RelativeLayout>

</LinearLayout>
